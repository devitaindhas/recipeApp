<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/user"/>
        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/plus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasty Recipes"
            android:textSize="25dp"
            android:typeface="monospace"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#F3C100"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="50dp">

        <Button
            android:id="@+id/btn_food1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="25dp"
            android:text="Spaghetti With BBQ Meatballs"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="italic"
            android:typeface="serif"
            android:background="@drawable/back_menu" />
        <Button
            android:id="@+id/btn_food2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="25dp"
            android:text="Seafood Fried Rice"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="italic"
            android:typeface="serif"
            android:background="@drawable/back_menu" />
        <Button
            android:id="@+id/btn_food3"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_margin="25dp"
            android:text="Grilled Salmon"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="italic"
            android:typeface="serif"
            android:background="@drawable/back_menu"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/home1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/dish2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            />
        <ImageButton
            android:id="@+id/home2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cocktails"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
        <ImageButton
            android:id="@+id/home3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cupcake"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>